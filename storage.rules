rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para imágenes de partners
    match /partners/{partnerId}/{imageName} {
      // Partners solo pueden leer/escribir sus propias imágenes
      allow read: if true; // Todos pueden leer imágenes públicas
      allow write: if request.auth != null && request.auth.uid == partnerId;
    }
    
    // Reglas para imágenes de ofertas
    match /offers/{partnerId}/{imageName} {
      // Partners solo pueden leer/escribir imágenes de sus ofertas
      allow read: if true; // Todos pueden leer imágenes públicas
      allow write: if request.auth != null && request.auth.uid == partnerId;
    }
    
    // Reglas para imágenes de flash deals
    match /flashDeals/{partnerId}/{imageName} {
      // Partners solo pueden leer/escribir imágenes de sus flash deals
      allow read: if true; // Todos pueden leer imágenes públicas
      allow write: if request.auth != null && request.auth.uid == partnerId;
    }
    
    // Reglas generales para desarrollo (temporal)
    match /{allPaths=**} {
      allow read, write: if request.time < timestamp.date(2025, 12, 31);
    }
  }
}
